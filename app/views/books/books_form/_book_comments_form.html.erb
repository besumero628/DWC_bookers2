<!--コメント一覧-->
<table>
<% book_comments.each do |book_comment| %>
<tr>
  <td class = "comment">
  <%= link_to user_path(book_comment.user_id) do %>
    <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "noimage.jpg", size:'50x50' %><br>
    <%= User.find(book_comment.user_id).name %>
  <% end %>
  </td>

  <td class = "comment">
  <%= book_comment.comment %>
  </td>

  <td class = "comment">
  <% if book_comment.user_id == current_user.id %>
    <%= link_to "destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, class: 'btn btn-sm btn-danger' %>
  <% end %>
  </td>
</tr>
<% end %>
</table>