<table class = table>
  <tr>
    <th></th><th>title</th> <th>Opinion</th> <th colspan=4></th>
  </tr>

  <tr>
    <td>
      <%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "noimage.jpg", size:'50x50' %><br>
        <%= @user.name %>
      <% end %>
    </td>

    <td><%= book.title %></td>
    <td><%= book.body %></td>

    <% if book.favorited?(current_user.id) %>
      <td><%= link_to "♡#{book.favorites_count}", book_favorite_path(book.id, Favorite.find_by(book_id: book.id, user_id: current_user.id)), method: :delete, class: "favorite" %></td>
    <% else %>
      <td><%= link_to "♡#{book.favorites_count}", book_favorites_path(book.id), method: :create %></td>
    <% end %>
    
    <td>コメント数：<%= book.book_comments_count %></td>

    <% if book.user_id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(params[:id]) %></td>
      <td><%= link_to "Destroy", book_path, method: :delete , "data-confirm" => "本当に消しますか？" %></td>
    <% end %>
  <tr>
</table>