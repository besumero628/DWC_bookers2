<table class = table>
  <tr>
    <th></th><th>title</th> <th>Opinion</th> <th colspan=3></th>
  </tr>

  <tr>
    <th>
      <%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "noimage.jpg", size:'50x50' %><br>
        <%= @user.name %>
      <% end %>
    </th>

    <th><%= book.title %></th>
    <th><%= book.body %></th>
    
    <% if book.favorited?(current_user.id) %>
      <th><%= link_to "♡#{book.favorites_count}", book_favorite_path(book.id, Favorite.find_by(book_id: book.id, user_id: current_user.id)), method: :delete %></th>
    <% else %>
      <th><%= link_to "♡#{book.favorites_count}", book_favorites_path(book.id), method: :create %></th>
    <% end %>

    <% if book.user_id == current_user.id %>
      <th><%= link_to "Edit", edit_book_path(params[:id]) %></th>
      <th><%= link_to "Destroy", book_path, method: :delete , "data-confirm" => "本当に消しますか？" %></th>
    <% end %>

  <tr>

</table>