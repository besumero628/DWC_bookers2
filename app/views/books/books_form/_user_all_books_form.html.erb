<table class = table>
  <tr>
    <th></th><th>title</th> <th>Opinion</th>
  </tr>
  <% books.each do |book| %>
    <% @user = users.find(book.user_id) %>
    <tr>
    <th><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "noimage.jpg" %></th>
    <th><%= book.title %></th>
    <th><%= book.body %></th>
    <tr>
  <% end %>
</table>