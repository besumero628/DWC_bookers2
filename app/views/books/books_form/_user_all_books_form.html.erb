<table class = table>
  <tr>
    <th></th><th>title</th> <th>Opinion</th>
  </tr>
  <% books.each do |book| %>
    <% @user = users.find(book.user_id) %>
    <tr>

      <th>
        <%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "noimage.jpg", size:'50x50' %>
        <% end %>
      </th>

      <th><%= link_to "#{book.title}", book_path(book.id) %></th>
      <th><%= book.body %></th>

    <tr>
  <% end %>
</table>