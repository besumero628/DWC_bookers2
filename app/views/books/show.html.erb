<!--flash message-->
<%= render 'devise/shared/flash_messages' %>

<!--validation error message-->
<%= render 'shared/validation_error_messages', instance: @book %>

<div class='row'>
  <div class='col-md-3'>
    <!--User info-->
    <h1>User info</h1>
    <%= render 'users/users_form/user_info_form', user: @user  %>

    <!--New Book-->
    <h1>New book</h1>
    <%= render 'books/books_form/book_create_form', book: @book  %>
  </div>

  <div class='col-md-8 offset-md-1'>
    <!--User Books-->
    <h1>Book detail</h1>
    <%= render 'books/books_form/books_show_form', book: @book_detail, user: @user %>
    <%= render 'books/books_form/book_comments_form', book: @book_detail, user: @user, book_comments: @book_comments %>
    <%= render 'books/books_form/book_comment_form', book: @book_detail, book_comment: @book_comment %>
  </div>
</div>