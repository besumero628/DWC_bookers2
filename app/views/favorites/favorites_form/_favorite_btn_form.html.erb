<%if book.favorited?(current_user.id) %>
  <%= link_to "♡#{book.favorites_count}", book_favorite_path(book.id, Favorite.find_by(book_id: book.id, user_id: current_user.id)), method: :delete, class: "favorite", remote: true %>
<% else %>
  <%= link_to "♡#{book.favorites_count}", book_favorites_path(book.id), method: :post, remote: true %>
<% end %>