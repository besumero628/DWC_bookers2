<table class = table>
  <tr>
    <th></th> <th>グループ名</th> <th>紹介文</th> <th>メンバー数</th> <th colspan=1></th>
  </tr>
  <% groups.each do |group| %>
    <tr>
      <td>
        <%= attachment_image_tag group, :group_image, format: 'jpeg', fallback: "noimage.jpg", size:'50x50' %>
      </td>
      <td><%= link_to group.name, group_path(group.id) %></td>
      <td><%= group.introduction %></td>
      <td><%= group.users.count + 1 %></td>

      <% if group.owner_id == current_user.id %>
      <td><%= link_to "edit", edit_group_path(group.id), class:"btn-sm btn-success" %></td>
      <% else %>
      <td></td>
      <% end %>
    <tr>
  <% end %>
</table>