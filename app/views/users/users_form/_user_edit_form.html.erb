<%= form_with model: user, url: user_path, local: true do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :Image %><br>
    <%= f.attachment_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br>
    <%= f.text_field :introduction %>
  </div>

  <div class="actions">
    <%= f.submit "Update_User", class: 'btn btn-sm btn-success' %>
  </div>
<% end %>